	 <label>
        <name>G Load</name>
        <x>-70</x>
        <y>-90</y>
        <width>2</width>
        <height>2</height>
        <input>
            <property>/accelerations/pilot/z-accel-fps_sec</property>
            <factor>-0.03108095</factor>
            <damp>1.0</damp>
        </input>
        <format>%2.1f</format>
        <halign>left</halign>
    </label>
	
	 <label>
	<name>AGL</name>
	<x>40</x>
	<y>17</y>
	<width>24</width>
	<height>10</height>
	<input>
	<property>/position/altitude-agl-ft</property>
	</input>
	<format>AGL%4.0f</format>
	<halign>right</halign>
	<box>false</box>
	<option>left</option>
	</label> 


<aiming-reticle>
  <x>-5.6</x>
  <y>-4.75</y>
  <width>20</width>
  <height>20</height>
 </aiming-reticle>
	<label>
<name>Warning AoA</name>
<x>-17</x>
<y>-50</y>
<width>34</width>
<height>20</height>
<condition>
<greater-than>
<property>fdm/jsbsim/aero/alpha-deg</property>
<value>30</value>
</greater-than>
</condition>
<format>!!AoA!!</format>
<input>
  <property>null</property>
</input>
<halign>left</halign>
<option>right</option>
<blinking>
	<interval>0.1</interval>
</blinking>
</label>
	<label>
<name>Warning</name>
<x>-17</x>
<y>-30</y>
<width>1</width>
<height>1</height>
<condition>
<greater-than>
<property>controls/warn</property>
<value>1</value>
</greater-than>
</condition>
<format>WARN</format>
<input>
  <property>null</property>
</input>
<halign>left</halign>
<option>right</option>
<blinking>
	<interval>0.1</interval>
</blinking>
</label>

<label>
<name>Warning Low Fuel</name>
<x>-36</x>
<y>-30</y>
<width>1</width>
<height>1</height>
<condition>
<less-than>
    <property>/consumables/fuel/tank/level-gal_us</property>
    <value>400</value>
   </less-than>
</condition>
<format>!BINGO FUEL!</format>
<input>
  <property>null</property>
</input>
<blinking>
	<interval>0.1</interval>
</blinking>
<halign>left</halign>
<option>right</option>
</label>


	
	</PropertyList>
