    <label>
        <name>MACH Number</name>
        <x>-75</x>
        <y>-80</y>
       <width>2</width>
        <height>2</height>
        <input>
            <property>/velocities/mach</property>
        </input>
        <format>%4.3f</format>
        <halign>left</halign>
    </label>
	
