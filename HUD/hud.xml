<?xml version="1.0"?>

<PropertyList>



    <enable3d>true</enable3d>
    <file>Aircraft/F-22/Nasal/hud.nas</file>

   <ladder>
        <name>Pitch Ladder</name>
        <type>pitch</type>
        <x>-32</x>
        <y>-20</y>
        <width>60</width>
        <height>0</height>
        <roll-input>
            <property>/orientation/roll-deg</property>
        </roll-input>
        <pitch-input>
            <property>/orientation/pitch-deg</property>
        </pitch-input>
        <compression-factor>5.8</compression-factor>
        <display-span>25.0</display-span>
        <divisions>5.0</divisions>
        <screen-hole>15</screen-hole>
        <zero-bar-overlength>2</zero-bar-overlength>
        <enable-dive-bar-angle>true</enable-dive-bar-angle>
        <enable-dynamic-origin>false</enable-dynamic-origin>
        <enable-fuselage-ref-line>false</enable-fuselage-ref-line>
        <enable-target-spot>false</enable-target-spot>
		<enable-target-markers>false</enable-target-markers>
        <enable-velocity-vector>false</enable-velocity-vector>
        <enable-drift-marker>false</enable-drift-marker>
        <enable-alpha-bracket>false</enable-alpha-bracket>
        <enable-energy-marker>false</enable-energy-marker>
        <enable-climb-dive-marker>false</enable-climb-dive-marker>
        <enable-glide-slope-marker>false</enable-glide-slope-marker>
        <glide-slope>0.0</glide-slope>
        <enable-energy-worm>false</enable-energy-worm>
        <enable-waypoint-marker>false</enable-waypoint-marker>
    </ladder>

    <tape>
        <name>Altitude-MSL</name>
        <x>53</x>
        <y>-72</y>
        <width>5</width>
        <height>100</height>
        <input>
            <property>/position/altitude-ft</property>
            <factor>1</factor>
            <max>100000</max>
            <min>-1</min>
        </input>
        <major-divisions>1000</major-divisions>
        <minor-divisions>500</minor-divisions>
        <display-span>3000.0</display-span>
        <option>right</option>
        <option>vertical</option>
        <tick-bottom>false</tick-bottom>
        <tick-top>false</tick-top>
        <tick-right>false</tick-right>
        <tick-left>true</tick-left>
        <cap-bottom>false</cap-bottom>
        <cap-top>false</cap-top>
        <cap-right>false</cap-right>
        <cap-left>true</cap-left>
        <marker-offset>5</marker-offset>
        <enable-pointer>true</enable-pointer>
        <pointer-type>fixed</pointer-type>
    </tape>

    <tape>
        <name>KIAS</name>
        <x>-67</x>
        <y>-72</y>
        <width>10</width>
        <height>100</height>
        <input>
            <property>/velocities/airspeed-kt</property>
            <factor>1</factor>
            <max>1500</max>
            <min>0</min>
        </input>
        <major-divisions>50</major-divisions>
        <minor-divisions>25</minor-divisions>
        <display-span>100</display-span>
        <option>left</option>
        <option>vertical</option>
        <tick-bottom>false</tick-bottom>
        <tick-top>false</tick-top>
        <tick-right>true</tick-right>
        <tick-left>false</tick-left>
        <cap-bottom>true</cap-bottom>
        <cap-top>false</cap-top>
        <cap-right>true</cap-right>
        <cap-left>false</cap-left>
        <marker-offset>5</marker-offset>
        <enable-pointer>true</enable-pointer>
        <pointer-type>fixed</pointer-type>
    </tape>


    <tape>
        <name>Gyrocompass</name>
        <x>-67.5</x>
        <y>39</y>
        <width>130</width>
        <height>10</height>
        <input>
            <property>orientation/heading-magnetic-deg</property>
            <factor>0.1</factor>
            <max>90</max>
            <min>0</min>
        </input>
        <display-span>3</display-span>
		<option>top</option>
		<option>horizontal</option>
        <major-divisions>1</major-divisions>
        <minor-divisions>0.1</minor-divisions>
        <tick-bottom>false</tick-bottom>
        <tick-top>false</tick-top>
        <tick-right>false</tick-right>
        <tick-left>false</tick-left>
        <cap-bottom>true</cap-bottom>
        <cap-top>true</cap-top>
        <cap-right>false</cap-right>
        <cap-left>false</cap-left>
        <marker-offset>10</marker-offset>
        <enable-pointer>true</enable-pointer>
        <pointer-type>fixed</pointer-type>
        <tick-type>line</tick-type>
        <tick-length>fixed</tick-length>
    </tape>



