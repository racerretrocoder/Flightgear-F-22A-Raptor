<?xml version="1.0"?>
<PropertyList>
	<name>cipher</name>
  	<modal>false</modal>
  	<layout>vbox</layout>
  	<draggable>true</draggable>
    <resizable>true</resizable>
    <width>250</width>
    <height>250</height>

    <group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>

		<text>
			<label>KY-58 Encryption Cipher</label>
		</text>

		<empty><stretch>1</stretch></empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<default>1</default>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</button>
	</group>


	<input>
	  	<width>250</width>
	  	<height>25</height>
	  	<label>Code</label>
	  	<property>controls/ky58/cipherkey</property>
	  	<live>true</live>
	  	<halign>center</halign>
        <binding>
            <command>dialog-apply</command>
      	</binding>
      	<color>
      		<red>0.2</red>
      		<green>1</green>
      		<blue>1</blue>
      	</color>
      	<enable>
    		<property>controls/ky58/encrypted</property>
        </enable>
	</input>



</PropertyList>