<?xml version="1.0"?>

<PropertyList>

  <path>flash.ac</path>



  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>



  <animation>
    <type>material</type>
    <object-name>flash</object-name>
    <emission>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
      <factor-prop>sim/multiplay/generic/int[20]</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>flash</object-name>
    <interpolation>
      <entry><ind>    0 </ind><dep> 0.25 </dep></entry>
      <entry><ind>   20 </ind><dep> 0.50 </dep></entry>
      <entry><ind> 1500 </ind><dep> 0.50 </dep></entry>
    </interpolation>
  </animation>

 
  <animation>
    <type>select</type>

	<object-name>flash</object-name>
	<name>NoseGearLandingflashFlash</name> 
	
     <condition>
     <and>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value> 1 </value>
      </equals>
      <equals>
        <property>sim/multiplay/generic/int[20]</property> <!--controls/flashing/landing-flashs-->
        <value> 1 </value>
      </equals>
      </and>
    </condition>
  </animation> 

</PropertyList>
